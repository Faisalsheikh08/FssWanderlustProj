<style>
  .btn-search {
    background-color: #fe242d;
    color: #fff;
    border-radius: 3rem;
    padding: 0 1rem;
  }
  .btn-search:hover {
    background-color: #fe242d;
    color: #fff;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
  .ser-inp {
    border-radius: 3rem;
    padding: 0.5rem 1rem;
    width: 100%;
  }

  /* Reduce Search Box Size for Desktop */
  @media (min-width: 769px) {
    .search-container {
      max-width: 400px; /* Adjust width */
    }
    .ser-inp {
      max-width: 250px; /* Reduce search input width */
    }
  }

  /* Center search bar on mobile */
  @media (max-width: 768px) {
    .search-container {
      width: 100%;
      justify-content: center;
      padding: 0.5rem 1rem;
    }

    /* White Background when Navbar Expands */
    .navbar-collapse {
      background: #fff; /* White Background */
      padding: 1rem;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    /* Align Navbar Items in Mobile */
    .navbar-nav {
      text-align: center;
      width: 100%;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <!-- Logo -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- Navbar Toggler -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav mx-auto">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <!-- Search Bar (Centered on Mobile) -->
      <div class="search-container d-flex justify-content-center w-100">
        <form class="d-flex w-100" role="search">
          <input
            class="form-control me-2 ser-inp"
            type="search"
            placeholder="Search destination"
            aria-label="Search"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>

      <!-- Right Side Navbar Items -->
      <ul class="navbar-nav ms-auto text-center">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
        <% if (!currUser) { %>
        <li class="nav-item">
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login"><b>Log In</b></a>
        </li>
        <% } %> <% if (currUser) { %>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Log out</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
