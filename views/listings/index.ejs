<% layout("/layouts/boilerplate")%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 0;
  }

  .filter {
    text-align: center;
    margin-right: 1.5rem;
    margin-top: 1.3rem;
    opacity: 0.6;
  }

  .filter:hover {
    cursor: pointer;
    opacity: 1;
  }

  .filter p {
    font-size: 0.8rem;
  }

  /* ðŸ“± Mobile View Fix */
  @media (max-width: 768px) {
    #filters {
      display: flex;
      flex-wrap: nowrap; /* Keep filters in a single row */
      overflow-x: auto; /* Enable horizontal scrolling */
      white-space: nowrap; /* Prevent wrapping */
      padding: 0.5rem;
      gap: 1rem;
      justify-content: flex-start; /* Align items properly */
    }

    .filter {
      flex: 0 0 auto; /* Prevents filters from stacking */
      margin: 0 0.5rem; /* Adjust spacing */
      text-align: center;
    }
  }
</style>

<div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
