<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <%for(list of allListing){%>
  <a href="/listings/<%=list._id%>" class="index_a">
    <div class="card listing-card">
      <img
        src="<%=list.image.url%>"
        class="card-img-top"
        alt="Listing_img"
        style="height: 20rem !important"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= list.title%></b> <br />
          &#8377;<%=list.price.toLocaleString('en-IN')%> / night
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>
